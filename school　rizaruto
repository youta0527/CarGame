using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;
using TMPro;

public class rezalt : MonoBehaviour
{
    public TextMeshProUGUI finishTime_text;
    public TextMeshProUGUI win_text;
    float Time;

    // Start is called before the first frame update
    void Start()
    {
        
    }

    // Update is called once per frame
    void Update()
    {
        Time = CarMove.getFinishTime();

        if (Time == 0)
        {
            finishTime_text.text = "GameOver";
            win_text.gameObject.SetActive(false);
        }
        else finishTime_text.text = Time + "";
    }
}
